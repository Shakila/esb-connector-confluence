<component name="confluence-content" type="synapse/template">
    <subComponents>
        <component name="listContent">
            <file>listContent.xml</file>
            <description>Returns a paginated list of Content .</description>
        </component>
        <component name="updateContent">
            <file>updateContent.xml</file>
            <description>Updates a piece of Content, including changes to content status.
            </description>
        </component>
        <component name="getContent">
            <file>getContent.xml</file>
            <description>Returns a piece of Content.</description>
        </component>
        <component name="returnContentHistory">
            <file>returnContentHistory.xml</file>
            <description>Returns the history of a particular piece of content.</description>
        </component>
        <component name="search">
            <file>search.xml</file>
            <description>Fetch a list of content using the Confluence Query Language.</description>
        </component>
        <component name="getContentChildren">
            <file>getContentChildren.xml</file>
            <description>Returns a map of the direct children of a piece of Content.</description>
        </component>
        <component name="listContentComments">
            <file>listContentComments.xml</file>
            <description>Returns the comments of a content .</description>
        </component>
    </subComponents>
</component>