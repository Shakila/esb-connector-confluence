<component name="confluence_user_management" type="synapse/template">
    <subComponents>
        <component name="getUser">
            <file>getUser.xml</file>
            <description>get a single user.
            </description>
        </component>
        <component name="addUser">
            <file>addUser.xml</file>
            <description>add a new user with the given password
            </description>
        </component>
        <component name="addGroup">
            <file>addGroup.xml</file>
            <description>add a new group
            </description>
        </component>
        <component name="getUserGroups">
            <file>getUserGroups.xml</file>
            <description>get a user's current groups
            </description>
        </component>
        <component name="addUserToGroup">
            <file>addUserToGroup.xml</file>
            <description>add a user to a particular group
            </description>
        </component>
        <component name="removeUserFromGroup">
            <file>removeUserFromGroup.xml</file>
            <description>remove a user from a group
            </description>
        </component>
        <component name="removeUser">
            <file>removeUser.xml</file>
            <description>delete a user.
            </description>
        </component>
        <component name="removeGroup">
            <file>removeGroup.xml</file>
            <description>remove a group. If defaultGroupName is specified, users
                belonging to groupname will be added to defaultGroupName.
            </description>
        </component>
        <component name="getGroups">
            <file>getGroups.xml</file>
            <description>gets all groups
            </description>
        </component>
        <component name="deactivateUser">
            <file>deactivateUser.xml</file>
            <description>deactivates the specified user
            </description>
        </component>
        <component name="reactivateUser">
            <file>reactivateUser.xml</file>
            <description>reactivates the specified user.
            </description>
        </component>
        <component name="getActiveUsers">
            <file>getActiveUsers.xml</file>
            <description>returns all registered user
            </description>
        </component>
        <component name="getUserInformation">
            <file>getUserInformation.xml</file>
            <description>Retrieves user information
            </description>
        </component>
        <component name="changeMyPassword">
            <file>changeMyPassword.xml</file>
            <description>changes the current user's password
            </description>
        </component>
        <component name="changeUserPassword">
            <file>changeUserPassword.xml</file>
            <description>changes the specified user's password
            </description>
        </component>
    </subComponents>
</component>