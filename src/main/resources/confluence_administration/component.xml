<component name="confluence_administration" type="synapse/template">

    <subComponents>
        <component name="exportSite">
            <file>exportSite.xml</file>
            <description>exports a Confluence instance and returns a String
                holding the URL for the download.
            </description>
        </component>
        <component name="getClusterInformation">
            <file>getClusterInformation.xml</file>
            <description>returns information about the cluster this node is part
                of.
            </description>
        </component>
        <component name="getClusterNodeStatuses">
            <file>getClusterNodeStatuses.xml</file>
            <description>returns a Vector of NodeStatus objects containing
                information about each node in the cluster.
            </description>
        </component>
        <component name="isPluginEnabled">
            <file>isPluginEnabled.xml</file>
            <description>returns true if the plugin is installed and enabled,
                otherwise false.
            </description>
        </component>
    </subComponents>
</component>